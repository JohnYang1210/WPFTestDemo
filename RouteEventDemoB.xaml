<UserControl x:Class="wpfTestStudio.RouteEventDemoB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpfTestStudio"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="source" MouseDown="source_MouseDown" Grid.Row="0" Text="JohnYang"/>
        <Label Grid.Row="1" AllowDrop="True" Drop="Label_Drop" DragEnter="Label_DragEnter">Drop here</Label>
        <Label Grid.Row="2" AllowDrop="True" Drop="Label_Drop" DragEnter="Label_DragEnter">Or here</Label>
    </Grid>
</UserControl>
